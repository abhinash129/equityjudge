		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


<context:component-scan base-package="com.nivesh.dao,com.nivesh.service,com.nivesh.util,com.nivesh.batch.CacheClearence" />

   


<bean id="ppc" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">

			<list>
					<value>classpath:jdbc.properties</value>
			</list>
		</property>
</bean> 
  


<import resource="beans/persistence-beans.xml"/>
<import resource="beans/service-beans.xml"/>
<import resource="beans/aop-beans.xml"/>
